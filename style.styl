@import "nib"
@import "font.styl"

grisBG=#eeeeee
fontSans()
	font-family: 'Open Sans', sans-serif;
a
	color #22BCE0
aside
	display none
body
	background grisBG
	fontSans()
	font-size 16px

footer
	background #22BCE0
	color rgba(white,0.7)
	padding 1em
	text-align center
	p:first-child
		margin-bottom 0
	p:last-child
		margin-top 0
		&:before
			content " - "
		&:after
			content " - "
h1
	font-size 1.2em 
	font-weight normal
	margin 0.2em 70px 0 0
	
header
	background #344B54
	color white
	padding 0.5em
	overflow hidden //Cuando las cosas se salen y hidden para q las esconda
	position relative
	figure
		float left
	#avatar
		position absolute
		top 0
		right 0
		margin 0.5em 0.5em
		img
			width 55px
			border-radius 50%
	#logo
		border-right 1px solid white 
		margin-right 0.5em
		img
			width 52px
			padding-right 0.5em
			margin-right 0.5em
			transition 0.5s
			&:hover
				transform rotate(360deg)
nav
	background #E47C7C
	box-shadow rgba(0,0,0,0.3) 0px 3px 20px
	margin 0
	padding 0 0.5em
	position relative
	ul
		margin 0
		padding 0
		list-style none
		li 
			display inline-block
			a
				color white
				text-decoration none
				display block
				padding 0.6em
				transition 0.3s
				&:hover
					background #344B54
		#publicar_nav
			position absolute
			right 0
			top 0.1em
			a
				background #22BCE0
				border-radius 5px
				box-shadow rgba(0,0,0,0.5) 5px 5px 20px
				color white
				font-style italic
				padding 0.5em 0.8em
				text-decoration none
				text-shadow rgba(0,0,0,0.5) 2px 2px 5px
				transition 0.3s
				&:hover
					background #344B54
#contenido
	margin 1em 
	.imagen_item
		float left
		margin 0 1em 0 0
		img
			width 96px
	.item
		background white
		border-bottom 3px solid #22BCE0
		position relative
		min-height 128px
		margin-bottom 3em
		
		.autor_item
			color #AAA
			font-style italic
		.datos_item
			text-align right
			  margin 1em 1em 0 0
			.fecha_item
				color #AAA
			.tag_item
				background #F4502A
				border-radius 0.5em
				color white
				display inline-block
				float left
				padding 0.2em 0.5em
				text-decoration none
		.titulo_item
			font-size 1.2em
			font-style italic
			padding 1em 1em 0 0
			a
				color #444
				text-decoration none
		.votacion
			background white
			border-radius 0 0 0.5em 0.5em
			box-shadow rgba(0,0,0,0.3) 3px 2px 10px
			left 5%
			margin-top 3px
			padding 0.2em 0.5em
			position absolute
			top 100%
			width 90%
			a
				text-decoration none
			.comentarios_item, .guardar_item
				float right
.form-wrapp
	display none
	form
		padding 1em
		text-align right
		input
			border-radius 3px
			border 1px solid #ccc
			padding 0.2em 0.6em
		.button
			background #e47c7c
			color white
			transition 0.3s
			&:hover
				background #344B54
			
//Cada que vez q imprima va tomar estos estilos
/*@media print 
	body 
		font-size 14px			*/
@media screen and (min-width:800px)
	#contenido
		overflow hidden
		 .item
			width 49%
			float left
			/*Elementos impares*/
			&:nth-child(odd)
				margin-right 2%
				
@media screen and (min-width:1000px)
	aside
		display block
		float right
		width 20%
		video
			width 100%
		
	